# ğŸ³ Dockerfile para API Gateway
FROM maven:3.9.3-eclipse-temurin-17 AS builder


# ğŸŒ± Variables de entorno
ENV APP_NAME=api-gateway
ENV APP_VERSION=1.0.0
ENV JAVA_OPTS="-Xmx512m -Xms256m"

# ğŸ“ Directorio de trabajo
WORKDIR /app

# âš™ï¸ Copiar archivos necesarios
COPY pom.xml ./
COPY mvnw ./
COPY .mvn/ .mvn/
# Dar permisos de ejecuciÃ³n al wrapper
RUN chmod +x mvnw

# ğŸ“¦ Descargar dependencias
RUN ./mvnw dependency:go-offline -B

# ğŸ‘©â€ğŸ’» Copiar el cÃ³digo fuente
COPY src ./src

# ğŸ”¨ Compilar el proyecto
RUN ./mvnw clean package -DskipTests

# ğŸ‘‰ Etapa 2: Runtime
FROM openjdk:17-jdk-slim

# ğŸ“¤ Copiar el .jar compilado al directorio de trabajo
WORKDIR /app
COPY --from=builder /app/target/api-gateway-1.0.0.jar api-gateway.jar

# ğŸšª Exponer el puerto de la aplicaciÃ³n
EXPOSE 8080

# ğŸš€ Ejecutar la app
CMD ["sh", "-c", "java $JAVA_OPTS -jar api-gateway.jar"]