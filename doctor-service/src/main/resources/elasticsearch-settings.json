{
  "analysis": {
    "analyzer": {
      "standard": {
        "type": "standard"
      },
      "spanish_analyzer": {
        "type": "custom",
        "tokenizer": "standard",
        "filter": ["lowercase", "spanish_stop", "spanish_stemmer"]
      },
      "autocomplete_analyzer": {
        "type": "custom",
        "tokenizer": "standard",
        "filter": ["lowercase", "autocomplete_filter"]
      }
    },
    "filter": {
      "spanish_stop": {
        "type": "stop",
        "stopwords": "_spanish_"
      },
      "spanish_stemmer": {
        "type": "stemmer",
        "language": "light_spanish"
      },
      "autocomplete_filter": {
        "type": "edge_ngram",
        "min_gram": 1,
        "max_gram": 20
      }
    }
  },
  "index": {
    "number_of_shards": 1,
    "number_of_replicas": 0,
    "max_ngram_diff": 50
  }
}
